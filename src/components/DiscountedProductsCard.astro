---
interface Props{
  src:string
  nameProduct:string
  price:number
  discount:number
}
const { src,nameProduct,price,discount } = Astro.props
const newPrice = price*discount/100
---
<article class="relative bg-white rounded-lg bg-opacity-20 backdrop-blur-md overflow-hidden hover:scale-[1.03] transition-all">
  <div class="bg-red-600 absolute px-3 py-1 rounded-br-lg">{discount}% OFF</div>
  <div class="bg-gray-300 grid place-content-center">
    <img src={src} alt={nameProduct} width="300px" height="300px">
  </div>
  <div class="p-5">
    <div>
      <h3 class="text-yellow-400 font-bold my-2">{nameProduct}</h3>
      <div class="flex justify-between mb-3">
        <span class="flex gap-3">
          <s class="text-gray-200 opacity-80 text-base mt-auto">${price}</s>
          <span class="text-cyan-500 font-bold text-3xl">${newPrice.toFixed(2)}</span>
        </span>
        <div class="bg-gray-main p-1 text-base rounded-md">23:59:59</div>
      </div>
    </div>
    <button class="w-full py-1 bg-red-600 rounded-md">Agregar</button>
  </div>
</article>